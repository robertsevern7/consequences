mixin tab(text, link, extraclass)
    .tab(class="bigtab")
        a.nohighlight(href="#{link}") #{text}

mixin nonATab(text, id, extraclass)
    .pointertab
        .tab(id=id, class=extraclass)
            .nohighlight #{text}

