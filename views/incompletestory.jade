script(src='/javascripts/storyrenderer.js')
img(id='hoverwindow')
.wrapper
    include navbar
    #container 
        h2 #{title}
        div &nbsp
        div 
            Starring: #{characters}
            span(class='useridentifier', userId='#{owner}')
        div &nbsp
        
        table(style="width:90%")
            -for (var id in sections)
                tr
                    - var section = sections[id]
                    td
                        div(class='storysection') #{section.content}
                    td
                        span(class='useridentifier', userId='#{section.contributor}')
    .push
include footer