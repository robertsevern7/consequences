script(src='/javascripts/storyrenderer.js')
script(src='/javascripts/EntryBox.js')
script(src='/javascripts/contribute.js')
#storyId(storyId='#{storyId}')
.wrapper
    include navbar
    #container 
        h2 #{title}
        div &nbsp
        .lockwarning
            if hasLock
                div You currently have the lock on this story
            else
                div Someone else has the lock on this story        
            div
                if hasLock
                    span Time to finish: 
                else
                    span Time until it is available:                 
                span(id='countdown', lockTime='#{lockTime}')
        div &nbsp
        .option Some ideas:
            #seed
                div &nbsp&nbsp&nbsp Characters: 
                    span #{characterOne} and 
                    span #{characterTwo}
                div &nbsp&nbsp&nbsp Where?: 
                    span #{location}
        div(class='useridentifier', userId='#{owner}')
        div &nbsp
        div Continue from this...
            table
                td
                    div(class='storysection') #{snippet.content}
                td
                    div(class='useridentifier', userId='#{snippet.contributor}')
                td
                    img(class='userimage', userId='#{snippet.contributor}')
        if hasLock
            .optionholder
                div
                    span(class='option') Your Contribution: (
                    span(id='charwarning')
                    span )
                textarea(id='contribution', class='optioninput', rows='5')
            div &nbsp
            .loggedon
                #contributebutton Contribute to this Story!
        .loggedout
            .gonebad Looks like you're logged out! Please log in via Facebook to contribute
    .push
include footer