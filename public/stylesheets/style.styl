html, body
    font-size: 14px
    font-family: 'Imprima', sans-serif
    background: #D8DCCE
    color: #321E1E
    height: 100%

a
    color: #0069FF
 
*
    margin: 0

.wrapper
    min-height: 100%
    height: auto !important
    height: 100%
    margin: 0 auto -50px

.footer, .push
    height: 50px

.footer
    font-family: 'Berkshire Swash', cursive
    width: 100%
    background-color: #333333
    color: #d9d9d9
    
.footer-content
    padding: 7px
 
#navbar
    font-family: 'Berkshire Swash', cursive
    width: 100%
    height: 160px
    background-color: #333333
    color: #d9d9d9
    position: relative
	
.title
    float: left
    font-size: 100px
    padding: 10px 0 0 30px
    
.bigbutton
    font-size: 24px
    margin: 10px
    padding: 20px
    background-color: #eef2e3
    border-radius: 5px
    width: 40%
    border: dotted
    cursor: pointer
    
.pointer
    cursor: pointer
    text-decoration: underline
    
#loginbar
    float: right
    padding: 20px
 
#container
    margin: 20px auto
    width: 80%
    padding: 20px
    background: #ffffff
    box-shadow: 1px 3px 3px #333
    border-radius: 5px
    overflow: auto;

.leftfloat
    float: left
    
.rightfloat
    float: right
    
.clearfloat
    
.button
    text-align:center
    background-color: #525252
    margin: 5px
    padding: 3px
    border-radius: 5px
    
.nohighlight
    color: #d9d9d9
    text-decoration: none
    
.tabtable
    border-spacing: 0
    position: absolute
    bottom: 0
    right: 0
    
.tab
    padding: 5px
    background-color: #525252
    border-top-left-radius: 5px
    border-top-right-radius: 5px
    
.biggertext
    font-size: 18px
    
.loggedon, .loggedout
    display: none
    
.optionholder
    padding: 2px
    
.option
    font-weight: strong
    
.optioninput
    margin-top: 4px
    margin-left: 20px
    width: 60%
    resize: none